<%# todo is a local %>
<div style="box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; border-radius: 15px; padding: 15px; margin-bottom: 15px;">
    <h3><%= todo.title %></h3>
    <p><%= todo.description %></p>
    <p><%= todo.complete? ? "Complete" : "Incomplete" %></p>
    <p><%= todo.deadline.nil? ? "No Deadline" : todo.deadline.to_s %></p>
    <p>This todo belongs to user with email: <%= todo.user.email %><p>
    <%= link_to "Edit", edit_todo_path(todo) %>
    <%= link_to "Delete", todo, data: { "turbo-method": :delete,
                                        turbo_confirm: "You sure?" } %>
</div>